			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code !== 201) {\r",
									"    return;\r",
									"}\r",
									"\r",
									"const authResponse = pm.response.json();\r",
									"const jwtToken = authResponse.accessToken.value;\r",
									"const userId = authResponse.id;\r",
									"const refreshToken = pm.cookies.get(\"refresh-token\");\r",
									"\r",
									"pm.collectionVariables.set(\"refresh-token\", refreshToken);\r",
									"\r",
									"pm.collectionVariables.set(\"jwt-token\", jwtToken);\r",
									"pm.collectionVariables.set(\"user-id\", userId);\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n    \"username\": \"hello noob\",\r\n    \"password\": \"Hello1234!\"\r\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
